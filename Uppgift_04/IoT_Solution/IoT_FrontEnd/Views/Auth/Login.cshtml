@{
    ViewBag.Title = "Login";
}
@model LoginRequestDto;

<form asp-action="Login">
    <br />
    <div class="container border p-3 mt-5">
        <h1 class="text-black text-center mb-3">Login</h1>

        <div class="row">
            
            <div class="col-12 pb-3">
                <label class="control-label pt-2 mb-1" style="font-size:20px;">Username</label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName"></span>
            </div>
       
            <div class="col-12 pb-3">
                <label class="control-label pt-2 mb-1" style="font-size:20px;">Password</label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password"></span>
            </div>
                  
            <div class="col-12 mt-3 pb-3">
                <input type="submit" value="Login" class="btn btn-success form-control" />
            </div>

            <div>
                <a asp-controller="Auth" asp-action="Register">Register here...</a>
            </div>
        </div>
        <div>
        </div>
    </div>
</form>


