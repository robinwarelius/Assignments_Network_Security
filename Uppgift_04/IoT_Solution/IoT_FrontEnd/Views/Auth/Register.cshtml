@{
    ViewBag.title = "Register";
}

@model RegistrationRequestDto;

<form asp-action="Register">
    <br />
    <div class="container border p-3 mt-5">
        <h1 class="text-black text-center mb-3">Register</h1>

        <div class="row">
          
            <div class="col-12 pb-3">
                <label class="control-label pt-2 mb-1" style="font-size:20px;">Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name"></span>
            </div>
                              
            <div class="col-12 pb-3">
                <label class="control-label pt-2 mb-1" style="font-size:20px;">Phone Number</label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber"></span>
            </div>
         
            <div class="col-12 pb-3">
                <label class="mb-1 control-label pt-2" style="font-size:20px;">Email</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email"></span>
            </div>
            
            <div class="col-12 pb-3">
                <label class="mb-1 control-label pt-2" style="font-size:20px;">Password</label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password"></span>
            </div>          

            <div class="col-15 pb-3">
                <label class="mb-1 control-label pt-2" style="font-size:20px;">Role</label>
                <select asp-for="Role" class="form-select" asp-items="@ViewBag.RoleList">
                    <option disabled selected>--Select Role--</option>
                </select>
            </div>

            <div class="col-12 mt-3 pb-3">
                <input type="submit" value="Register" class="btn btn-success form-control" />
            </div>
        </div>
        <div>
        </div>
    </div>
</form>