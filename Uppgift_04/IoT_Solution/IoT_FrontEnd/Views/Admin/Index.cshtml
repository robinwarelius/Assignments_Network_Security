@{
    ViewBag.Title = "Admin";
}
@model AdvertDto;


<div class="container">
    <div class="row">
        <div class="col-lg-4">
            <h1 class="mt-5 mb-2">ADMIN</h1>
            <h6>Amount of views: <span id="amountViews"></span> </h6>
            <h6>Amount of connections: <span id="amountConnections"></span> </h6>
        </div>
    </div>
</div>

<form asp-action="Index">
    <br />
    <div class="container border p-3 mt-3">
        <h1 class="text-black text-center mb-3">Create Advert</h1>

        <div class="row">
          
            <div class="col-12 pb-3">
                <label class="control-label pt-2 mb-1" style="font-size:20px;">Title</label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title"></span>
            </div>
           
            <div class="col-12 pb-3">
                <label class="mb-1 control-label pt-2" style="font-size:20px;">Description</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description"></span>
            </div>
       
            <div class="col-12 pb-3">
                <label class="control-label pt-2 mb-1" style="font-size:20px;">ImageUrl</label>
                <input asp-for="ImageUrl" class="form-control" />
                <span asp-validation-for="ImageUrl"></span>
            </div>

            <div class="col-12 mt-3 pb-3">
                <input type="submit" value="Create" class="btn btn-success form-control" />
            </div>

           
        </div>
        <div>
        </div>
    </div>
</form>


<script src="~/js/signalr.js"></script>
<script src="~/js/unitHub.js"></script>